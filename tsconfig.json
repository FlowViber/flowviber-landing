{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*", "./app/workflow-builder/components/*"],
      "@/lib/*": ["./lib/*", "./app/workflow-builder/lib/*"],
      "@/hooks/*": ["./hooks/*", "./app/workflow-builder/hooks/*"],
      "@/types/*": ["./types/*", "./app/workflow-builder/types/*"],
      "@/utils/*": ["./utils/*", "./app/workflow-builder/utils/*"],
      "@/styles/*": ["./styles/*", "./app/workflow-builder/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
